{
  "permissions": {
    "allow": [
      "Read",
      "Edit",
      "Write",
      "Glob",
      "Grep",
      "Task",
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git branch:*)",
      "Bash(npm run:*)",
      "Bash(npm test:*)",
      "Bash(npm install:*)",
      "Bash(chmod:*)",
      "Bash(ls:*)",
      "Bash(mkdir:*)",
      "Bash(source:*)"
    ],
    "deny": [
      "Bash(rm -rf /:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Bash(git reset --hard:*)"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "./scripts/statusline.sh"
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c '[[ ! \"$TOOL_INPUT\" =~ (--force|push\\ -f|reset\\ --hard|rm\\ -rf\\ /) ]]'",
            "description": "Block destructive git/shell commands"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash -c 'if [ \"$EXIT_CODE\" -ne 0 ]; then echo \"[HOOK] Command exited with code $EXIT_CODE\" >&2; fi'",
            "description": "Log command failures"
          }
        ]
      }
    ]
  }
}
